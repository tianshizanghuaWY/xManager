<mapper namespace="com.qianyang.dao.UserDao">

    <resultMap type="com.qianyang.model.User" id="userMap">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="phone" column="name"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,
        name,
        phone
    </sql>

    <insert id="save" parameterType="com.qianyang.model.User">
        INSERT INTO user
        (
        `id`,
        `name`,
        `phone`
        )
        VALUES
        (
        #{id},
        #{name},
        #{phone}
        )
    </insert>

